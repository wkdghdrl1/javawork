
public class Boolean_04 {

	public static void main(String[] args) {
			
		// intNum1과 intNum2를 사용할 준비를 하는 선언
		int intNum1 = 0;
		int intNum2 = 0;
		System.out.println(intNum1);
		
		// 변수를 선언할 때
		// 값을 아무것도 대입하지 않으면
		// 변수를 사용할 준비가 되지 않은 상태가 된다.
		// 그런데 변수내용을 읽기를 시도하면 
		// 문법오류가 발생한다.
		int intNum3;
		// System.out.println(intNum3); // 결과 : 문법오류 발생
		
		intNum3 = 30;
		System.out.println(intNum3);
		
		boolean bYes = true;
		
		
	}

}
